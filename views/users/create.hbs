<form class="form-signin" method="post" action="/users/create">
    <h2 class="form-signin-heading">Register</h2>
    <input type="text" class="input-block-level" name="username" placeholder="Username" required value="{{input.username}}"/>
    <input type="email" class="input-block-level" name="email" placeholder="Email address" required value="{{input.email}}"/>
    <input type="password" class="input-block-level" name="password" placeholder="Password" required>
    <label class="checkbox">
      <input type="checkbox" value="remember-me"> Remember Me
    </label>
    <button class="btn btn-large btn-primary" type="submit">Sign In</button>
    <span style="color: red">{{error}}</span>
</form>